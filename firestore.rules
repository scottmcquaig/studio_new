
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User Profiles
    match /users/{userId} {
      // A user can create their own profile upon signing up.
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Game Data: Leagues, Teams, Contestants, etc.
    match /{collection}/{docId} {
      // Any authenticated user can read game data.
      allow read: if request.auth != null;
      
      // Only site admins can write (create, update, delete) game data.
      // This rule applies to all collections except 'users', which is handled above.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'site_admin';
    }
  }
}
