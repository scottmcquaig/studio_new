
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'site_admin';
    }

    // USERS
    // 1. Allow any authenticated user to create their OWN user document.
    // 2. Allow users to read their own data.
    // 3. Deny all other reads/writes to the users collection.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
    }
    
    // PUBLIC READ, ADMIN WRITE
    // For collections that anyone can view but only admins can modify.
    match /{collection}/{docId} 
    where collection in ['leagues', 'seasons', 'contestants', 'competitions', 'teams', 'picks', 'scoring_rules'] {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
